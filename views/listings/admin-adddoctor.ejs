<%- layout("layouts/admin-boilar") %>
<section>
  <h1>Add Doctor</h1>
  <div class="form-container">
    <form action="/addDoctor" method="POST" enctype="multipart/form-data">
      <label for="name">Name</label>
      <input type="text" id="name" name="name" maxlength="30" required>
      
      <label for="specialization">Specialization</label>
      <input type="text" id="specialization" name="specialization" required>
      
      <label for="phone">Phone</label>
      <input type="tel" id="phone" name="phone" pattern="\d{10,12}" required>
      
      <label for="email">E-mail</label>
      <input type="email" id="email" name="email" required>
      
      <label for="file">Choose File</label>
      <input type="file" id="file" name="img" accept="image/*">
      
      <label for="description">Description</label>
      <textarea id="description" name="description" rows="4" maxlength="500" required></textarea>
      
      <button type="submit">Add Doctor</button>
    </form>
  </div>
</section>
